Program {
    declarations: [
        FunctionDeclaration {
            identifier: "main",
            params: [],
            ret: Int,
            body: [
                VariableDeclaration {
                    name: "a",
                    ty: Int,
                    init: Constant(12345),
                },
                VariableDeclaration {
                    name: "i",
                    ty: Int,
                },
                For {
                    init: Some(
                        Assignment {
                            lhs: Var("i"),
                            rhs: Constant(5),
                        },
                    ),
                    condition: Binary {
                        op: GreaterThanOrEqual,
                        lhs: Var("i"),
                        rhs: Constant(0),
                    },
                    post: Assignment {
                        lhs: Var("i"),
                        rhs: Binary {
                            op: Subtract,
                            lhs: Var("i"),
                            rhs: Constant(1),
                        },
                    },
                    body: Expression(
                        Assignment {
                            lhs: Var("a"),
                            rhs: Binary {
                                op: Divide,
                                lhs: Var("a"),
                                rhs: Constant(3),
                            },
                        },
                    ),
                },
                Return(
                    Var("a"),
                ),
            ],
        },
    ],
