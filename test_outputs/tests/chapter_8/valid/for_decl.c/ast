Program {
    declarations: [
        FunctionDeclaration {
            identifier: "main",
            params: [],
            ret: Int,
            body: [
                VariableDeclaration {
                    name: "a",
                    ty: Int,
                    init: Constant(0),
                },
                For {
                    init: VariableDeclaration {
                        name: "i",
                        ty: Int,
                        init: Unary {
                            op: Minus,
                            expr: Constant(100),
                        },
                    },
                    condition: Binary {
                        op: LessThanOrEqual,
                        lhs: Var("i"),
                        rhs: Constant(0),
                    },
                    post: Assignment {
                        lhs: Var("i"),
                        rhs: Binary {
                            op: Add,
                            lhs: Var("i"),
                            rhs: Constant(1),
                        },
                    },
                    body: Expression(
                        Assignment {
                            lhs: Var("a"),
                            rhs: Binary {
                                op: Add,
                                lhs: Var("a"),
                                rhs: Constant(1),
                            },
                        },
                    ),
                },
                Return(
                    Var("a"),
                ),
            ],
        },
    ],
}